# OpenAI兼容协议嵌入服务配置示例

# 基础配置
PROJECT_NAME=向量数据库MCP服务
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Qdrant向量数据库配置
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_API_KEY=
QDRANT_HTTPS=false

# 嵌入服务配置
EMBEDDING_PROVIDER=openai

# OpenAI官方API配置
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# 或者使用其他兼容OpenAI协议的服务
# 例如：DeepSeek API
# OPENAI_API_KEY=your-deepseek-api-key
# OPENAI_BASE_URL=https://api.deepseek.com/v1
# OPENAI_EMBEDDING_MODEL=text-embedding-v1

# 例如：智谱AI API
# OPENAI_API_KEY=your-zhipu-api-key
# OPENAI_BASE_URL=https://open.bigmodel.cn/api/paas/v4
# OPENAI_EMBEDDING_MODEL=embedding-2

# 例如：本地部署的兼容服务
# OPENAI_API_KEY=local-api-key
# OPENAI_BASE_URL=http://localhost:8080/v1
# OPENAI_EMBEDDING_MODEL=bge-large-zh-v1.5

# 日志配置
LOG_LEVEL=INFO

# MCP服务器配置
MCP_SERVER_ENABLED=true
MCP_SERVER_PATH=/mcp
MCP_SERVER_NAME=向量数据库MCP服务
MCP_SERVER_DESCRIPTION=提供向量存储和检索功能的MCP服务